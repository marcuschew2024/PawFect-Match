{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "disallowLegacyRuntimeConfig": true,
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
  "hosting": {
    "public": "frontend/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/external/dog-breeds",
        "function": "getDogBreeds"
      },
      {
        "source": "/api/external/cat-breeds",
        "function": "getCatBreeds"
      },
      {
        "source": "/api/external/dog-images",
        "function": "getDogImages"
      },
      {
        "source": "/api/external/cat-images",
        "function": "getCatImages"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}